extends base

block content 
    .section.hero
        .columns
            .column.is-4
            .column.is-4.has-text-centered
                h1.title.has-text-centered Create your account
                form.form--signup
                    .field
                        p.control.has-icons-left.has-icons-right
                            input#name.input(type='text', placeholder='Your name', required)
                            span.icon.is-small.is-left
                                i.fas.fa-man
                            span.icon.is-small.is-right
                                i.fas.fa-check
                    .field
                        p.control.has-icons-left
                            input#email.input(type='email', placeholder='you@example.com', required)
                            span.icon.is-small.is-left
                                i.fas.fa-envelope
                    .field
                        p.control.has-icons-left
                            input#password.input(type='password', placeholder='password', required, minlength='8')
                            span.icon.is-small.is-left
                                i.fas.fa-lock
                    .field
                        p.control.has-icons-left
                            input#passwordConfirm.input(type='password', placeholder='confirm password', required, minlength='8')
                            span.icon.is-small.is-left
                                i.fas.fa-lock
                    .field
                        p.control.has-text-centered
                            button.button.is-primary.is-fullwidth
                                strong Create account 
                    .field
                        p.control.control.has-text-centered
                            a.is-primary(href='/login')
                                | Already registered? 
            .column.is-4
